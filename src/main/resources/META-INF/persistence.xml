<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.1">

    <persistence-unit name="my-persistence-unit" transaction-type="RESOURCE_LOCAL">
        <!-- Провайдер JPA -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Сутності -->
        <class>SQLAndHibernate.secondExample.models.CourseType</class>
        <class>SQLAndHibernate.secondExample.models.Course</class>
        <class>SQLAndHibernate.secondExample.models.PurchaseList</class>
        <class>SQLAndHibernate.secondExample.models.Student</class>
        <class>SQLAndHibernate.secondExample.models.Subscription</class>
        <class>SQLAndHibernate.secondExample.models.SubscriptionKey</class>
        <class>SQLAndHibernate.secondExample.models.Teacher</class>
        <class>SQLAndHibernate.secondExample.models.LinkedPurchaseList</class>

        <!-- JDBC -->
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/skillbox_hibernate?useSSL=false&amp;allowPublicKeyRetrieval=true"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="24022002sqlmarian"/>

            <!-- Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
